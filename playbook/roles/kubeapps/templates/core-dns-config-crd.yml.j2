
apiVersion: v1
kind: ConfigMap
metadata:
  name: coredns
  namespace: kube-system
data:
  Corefile: |
    .:53 {
        errors
        health {
          lameduck 5s
        }
        ready
        kubernetes cluster.local in-addr.arpa ip6.arpa {
          pods insecure
          fallthrough in-addr.arpa ip6.arpa
          ttl 30
        }
        prometheus :9153
        forward . 1.1.1.1
        cache 30
        loop
        reload
        loadbalance
    }

    {% set ingress_hosts_internals_joined = ingress_hosts_internals | join(" ") -%}

    {{ ingress_hosts_internals_joined }} {
      hosts {
        {{ kubeapps_ingress_controller_ip }} {{ ingress_hosts_internals_joined }}
        fallthrough
      }
      whoami
    }

    {{ kubeapps_internal_acme_host }} {
      hosts {
        {{ kubeapps_internal_acme_network_ip }} {{ kubeapps_internal_acme_host }}
        fallthrough
      }
      whoami
    }

