---
apiVersion: v1
kind: ConfigMap
metadata:
  name: coredns
  namespace: kube-system
data:
  Corefile: |
    .:53 {
        errors
        health {
          lameduck 5s
        }
        ready
        kubernetes cluster.local in-addr.arpa ip6.arpa {
          pods insecure
          fallthrough in-addr.arpa ip6.arpa
          ttl 30
        }
        prometheus :9153
        forward . /etc/resolv.conf
        cache 30
        loop
        reload
        loadbalance
    }

    {% set ingress_hosts_internals = [dex_hostname, waypoint_hostname] | join(" ") -%}

    {{ ingress_hosts_internals }} {
      hosts {
        {{ waypoint_ingress_controller_ip }} {{ ingress_hosts_internals }}
        fallthrough
      }
      whoami
    }

    {{ waypoint_internal_acme_host }} {
      hosts {
        {{ waypoint_internal_acme_network_ip }} {{ waypoint_internal_acme_host }}
        fallthrough
      }
      whoami
    }
