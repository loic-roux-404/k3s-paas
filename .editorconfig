# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.{yml,yaml,yml.*,yaml.*,xslt.*,*.xslt}]
indent_size = 2

[*.{hcl,tf,tfvars,tfvars.*}]
indent_size = 2

[*.sh]
end_of_line = lf

[*.{nix,tmpl}]
indent_size = 2

[Makefile]
indent_style = tab
